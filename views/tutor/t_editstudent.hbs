        <form action="/tutor/t_editStudent/{{student._id}}" style="margin-left: 220px;" method="POST" enctype="multipart/form-data">

            <div class="row mt-5" style="width: 134%;">
                <div class="col-md-6">
                    <div class="form-row">

                        <div class="form-group col-md-6">

                            <input type="text" class="form-control" name="first_name" value="{{student.first_name}}" placeholder="First Name" required>
                        </div>

                        <div class="form-group col-md-6">

                            <input type="text" class="form-control" name="last_name" value="{{student.last_name}}" placeholder="Last Name">
                        </div>


                    </div>

                    <div class="form-group">

                        <textarea class="form-control" name="address" id="" cols="2" rows="3"
                            placeholder="Address"> {{student.address}}</textarea>

                    </div>
                    <div class="form-group">

                        <input type="tel" class="form-control" name="mob" value="{{student.mob}}"  placeholder="Contact Number">
                    </div>

                    <div class="form-group">

                        <input type="email" class="form-control" name="email" value="{{student.email}}" placeholder="Email">
                    </div>

                    <div class="form-group">

                        <input type="password" class="form-control"  name="password"  placeholder="Password" required>
                    </div>

                    <div class="col-sm-12" style="text-align:center">
                        <button type="submit" id="loginbtn" class="btn btn-primary">Submit</button>
                    </div>


                </div>
                <div class="col-md-6">
                    <div class="form-group col-md-6">
                        <img src="/profile_photo/{{student._id}}.jpg" style="width:100px ; height:auto;" class="pt-3" alt="" id="imgView">
                        <input type="file" class="form-control-file" name="Image" id="Image" accept="image/jpg"
                            onchange="viewImage(event)">

                    </div>
                      {{#if error}}
    
                          <p class="text-danger error">{{error}} </p>
                   {{/if}}
                </div>

            </div>
        </form>




    </div>

</section>

<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>