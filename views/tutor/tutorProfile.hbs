<div class="container mt-5  ">

    <h1 class="text-center">Profile</h1>


    <form action="/tutor/tutorProfile/{{tutorDetails._id}}" method="POST" enctype="multipart/form-data">

    
        <div class="form-group" style=" margin:auto;width: 50%">
            â€‹<div>
                <img src="/tutor.jpg" class="img-fluid img-thumbnail"
                    style="float :right; height : 160px; width : 140px;padding : 0" alt="">
            </div>

            <div class="form-group row ">
                <label class="col-sm-2 col-form-label font-weight-bold">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="{{tutorDetails.name}}">
                </div>
            </div>

            <div class="form-group row ">
                <label class="col-sm-2 col-form-label font-weight-bold">job</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="job" value="{{tutorDetails.job}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Class</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="class" value="{{tutorDetails.class}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Address</label>
                <div class="col-sm-10">
                    <textarea name="address" class="form-control" cols="10"
                        rows="3"> {{tutorDetails.address}}</textarea>

                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" value="{{tutorDetails.email}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Mobile</label>
                <div class="col-sm-10">
                    <input type="tel" class="form-control" name="mob" value="{{tutorDetails.mob}}">
                </div>
            </div>

            <div class="col-sm-12" style="text-align:center">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>


        </div>
    </form>

</div>


<script>
    $(document).ready(function () {
        // Prepare the preview for profile picture
        $("#wizard-picture").change(function () {
            readURL(this);
        });
    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#wizardPicturePreview').attr('src', e.target.result).fadeIn('slow');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>