<div class="container">
    <div class="row mt-5">



        <div class="col-md-6">
            <img src="tutor.png" alt="" class="img-fluid" id="tutor_img">
        </div>


        <div class="col-md-6 ">
            <form class="" id="tutorForm" action="/tutor/tutorLogin" method="post">

                <div class="form-group">
                    <label>User name</label>
                    <input type="text" class="form-control" name="username" placeholder="User name"
                        onclick="removeErr(event)" required>

                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password"
                        onclick="removeErr(event)" required>
                </div>


                <button type="submit" class="btn btn-success float-right" id="loginbtn">Login</button>


            </form>
            <div>
                {{#if loginErr}}

                <p class="text-danger error" id="logerr">{{loginErr}} </p>
                {{/if}}

            </div>





        </div>
    </div>
</div>

<script>
    function removeErr(event) {
        let c = document.getElementById('logerr').innerHTML;
        if (c) {
            document.getElementById('logerr').innerHTML = ""
        }



    }

</script>