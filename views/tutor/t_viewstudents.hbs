<section>
    <div class="container">
        <h2 class="text-center">Student Details</h2>
        <div class="row mt-5 " style="margin-bottom: 10px;">
            
            <a href="/tutor/t_addStudent" class="btn btn-edit ml-auto" > Add student</a>
        </div>
        <table class="table mt-5" id="team-list">
            <thead> 
                <tr>
                    <th scope="col">Sl_no</th>
                    <th scope="col">Reg No</th>
                    <th scope="col">Name</th>                    
                     <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td></td>
                    <td>{{this.regno}}</td>
                    <td>{{this.first_name}}</td>
                   
                    <td>
                        <a href="t_editStudent/{{this._id}}" class="btn btn-edit">Edit</a>
                         <a href="t_deleteStudent/{{this._id}}" class="btn btn-danger"
                            onclick=" return confirm('Are you want to delete {{this.first_name}}')">Delete</a>
                        {{!-- <a href="admin/del_products ?id={{this._id}}&name=ninu" class="btn btn-primary">Delete</a> --}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
                       
</section>

